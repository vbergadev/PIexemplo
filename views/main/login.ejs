<%- include ../partials/header.ejs %>
<body>
    <%- include ../partials/navbar.ejs %>
    <div class="container">
        <div class="card" id="formulario-pergunta">
            <div class="card-header">
                <h3>Login</h3>
            </div>
            <div class="card-body">
                <!-- get envia pelo query params, o post envia dentro da requisição -->
                <form method="post" action="/saveuser">
                    <div class="d-flex flex-row justify-content-around input-group-lg">
                        <div class="col-xs-12">
                            <label>Nome completo</label>
                            <input name="name" type="text" placeholder="Escreva seu nome" class="form-control mb-3">
                        </div>
                        <div>
                            <label>Email</label>
                            <input name="email" type="email" placeholder="yourmail@mail.com" class="form-control mb-3"></input>
                        </div>
                    </div>
                    <div class="d-flex flex-row justify-content-around">
                        <div>
                            <label>Idade</label>
                            <input name="age" type="text" placeholder="23" class="form-control mb-3">
                        </div>
                        <div>
                            <label>Senha</label>
                            <input name="password" type="password" placeholder="digite sua senha" class="form-control mb-3"></input>
                        </div>
                    </div>
                    <div class="d-flex flex-row justify-content-around">
                        <button class="btn btn-primary btn-lg" type="submit">Enviar</button>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
    
</body>
<%- include ../partials/footer.ejs %>